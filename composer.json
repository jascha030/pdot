{
    "name": "jascha030/pdot",
    "description": "Dotfile management CLI.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jascha030",
            "email": "contact@jaschavanaalst.nl"
        }
    ],
    "homepage": "https://github.com/jascha030",
    "bin": ["pdot"],
    "autoload": {
        "files": [
            "includes/cli.php",
            "includes/container.php"
        ],
        "psr-4": {
            "Jascha030\\Dotfiles\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jascha030\\Dotfiles\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0||^8.1",
        "jascha030/cli": "^1.1",
        "symfony/console": "^6.0",
        "symfony/finder": "^6.0",
        "symfony/filesystem": "^6.0",
        "php-di/php-di": "^6.4",
        "illuminate/collections": "^9.41"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^v3.8.0",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "symfony/var-dumper": "4.4|^5.4|^6.0"
    },
    "extra": {},
    "scripts": {
        "phpunit": "phpunit -c .phpunit.xml",
        "php-cs-fixer": "php-cs-fixer fix --config=.php-cs-fixer.php",
        "test": "@phpunit",
        "format": "@php-cs-fixer"
    },
    "scripts-descriptions": {
        "test": "Runs phpunit with .phpunit.xml",
        "format": "Runs php-cs-fixer with .php-cs-fixer.php."
    }
}
